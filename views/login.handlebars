  <div class="login-card">
    <h1 class="page-title">Login</h1>
    <form class="form login-form">
    <div class "links">
      <a href="/" class="active">Login</a>
      <a href="/signup">Sign up</a>
    </div>
      <div class="form-group">
        {{!-- USER LOGIN EMAIL INPUT --}}
        <form class="form login-form" action="/" method="post">
          <label for="email-login"></label>
          <input class="form-input" type="text" placeholder="Email" id="email-login" required>
        {{!-- USER LOGIN PASSWORD INPUT --}}
          <div>
          <label for="password-login"></label>
          <input class="form-input" type="password" name="password" placeholder="Password" id="password-login" required>
          </div>
        {{!-- REMEMBER USER --}}
          <div>
          <label id="rememberme"></label>
            <input type="checkbox" name="rememberme">Remember me
          </div>
        <div class="form-group">
          <button class="btn btn-primary" type="submit">Login</button>
        </div>
        </form>

<script src="./js/login.js"></script>